# Frontend Environment Configuration
# Copy to .env.local for local development
# Set in Vercel dashboard for production

# ===========================================
# API CONNECTION SETTINGS
# ===========================================

# Local Development (Docker backend)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1

# Production (AWS Backend - after migration)
# NEXT_PUBLIC_API_URL=https://api.advanciapayledger.com
# For now during GCP migration:
# NEXT_PUBLIC_API_URL=https://your-gcp-backend-url.com

# Cloudflare Workers Edge API (if using)
# NEXT_PUBLIC_EDGE_API_URL=https://edge.advanciapayledger.com

# ===========================================
# AUTHENTICATION
# ===========================================

NEXT_PUBLIC_AUTH_COOKIE_NAME=advancia_auth_token
NEXT_PUBLIC_REFRESH_COOKIE_NAME=advancia_refresh_token
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# FEATURE FLAGS
# ===========================================

NEXT_PUBLIC_ENABLE_CRYPTO_PAYMENTS=true
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_OAUTH=true

# ===========================================
# PAYMENT PROVIDERS
# ===========================================

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_ENVIRONMENT=development

# ===========================================
# SECURITY
# ===========================================

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://advanciapayledger.com,https://www.advanciapayledger.com

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# DATABASE (Backend only - keep separate)
# ===========================================
# DATABASE_URL is set in backend .env only

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_LOGGING=true
