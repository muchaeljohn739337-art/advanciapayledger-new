// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User Management
model User {
  id               String   @id @default(uuid())
  email            String   @unique
  passwordHash     String   @map("password_hash")
  firstName        String   @map("first_name")
  lastName         String   @map("last_name")
  role             UserRole @default(PATIENT)
  isActive         Boolean  @default(true) @map("is_active")
  twoFactorEnabled Boolean  @default(false) @map("two_factor_enabled")
  twoFactorSecret  String?  @map("two_factor_secret")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  // Relations
  patients       Patient[]
  providers      Provider[]
  payments       Payment[]
  cryptoPayments CryptoPayment[]
  refunds        Refund[]
  auditLogs      AuditLog[]
  wallets        Wallet[]
  sessions       Session[]
  transactions   Transaction[]
  bookings       Booking[]

  @@map("users")
}

enum UserRole {
  PATIENT
  PROVIDER
  ADMIN
}

// Healthcare Facilities
model Facility {
  id        String       @id @default(uuid())
  name      String
  address   String
  city      String
  state     String
  zipCode   String       @map("zip_code")
  phone     String
  email     String
  type      FacilityType
  isActive  Boolean      @default(true) @map("is_active")
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  // Relations
  patients       Patient[]
  payments       Payment[]
  cryptoPayments CryptoPayment[]
  providers      Provider[]
  chambers       Chamber[]
  bookings       Booking[]

  @@map("facilities")
}

enum FacilityType {
  HOSPITAL
  CLINIC
  LABORATORY
  IMAGING_CENTER
}

// Patient Management
model Patient {
  id          String   @id @default(uuid())
  userId      String   @unique @map("user_id")
  firstName   String   @map("first_name")
  lastName    String   @map("last_name")
  dateOfBirth DateTime @map("date_of_birth") @db.Date
  phone       String?
  address     String?
  city        String?
  state       String?
  zipCode     String?  @map("zip_code")
  email       String?
  ssn         String?  @map("ssn") // Encrypted
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  facility       Facility        @relation(fields: [facilityId], references: [id])
  facilityId     String          @map("facility_id")
  payments       Payment[]
  cryptoPayments CryptoPayment[]
  medicalRecords MedicalRecord[]
  bookings       Booking[]

  @@map("patients")
}

// Provider Management
model Provider {
  id         String   @id @default(uuid())
  userId     String   @unique @map("user_id")
  npiNumber  String   @unique @map("npi_number")
  firstName  String   @map("first_name")
  lastName   String   @map("last_name")
  specialty  String
  phone      String
  email      String
  facilityId String   @map("facility_id")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  facility       Facility        @relation(fields: [facilityId], references: [id])
  payments       Payment[]
  medicalRecords MedicalRecord[]
  bookings       Booking[]

  @@map("providers")
}

// Payment Processing
model Payment {
  id            String        @id @default(uuid())
  amount        Decimal       @db.Decimal(10, 2)
  currency      String        @default("USD")
  paymentMethod PaymentMethod @map("payment_method")
  status        PaymentStatus @default(PENDING)
  description   String
  transactionId String?       @map("transaction_id")
  patientId     String        @map("patient_id")
  facilityId    String        @map("facility_id")
  providerId    String?       @map("provider_id")
  createdBy     String        @map("created_by")
  // Debit card specific fields
  isDebitCard   Boolean       @default(false) @map("is_debit_card")
  pinVerified   Boolean       @default(false) @map("pin_verified")
  balanceCheck  DateTime?     @map("balance_check")
  hsaFsaType    String?       @map("hsa_fsa_type") // HSA, FSA, null
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  // Relations
  patient  Patient   @relation(fields: [patientId], references: [id])
  facility Facility  @relation(fields: [facilityId], references: [id])
  user     User      @relation(fields: [createdBy], references: [id])
  provider Provider? @relation(fields: [providerId], references: [id])
  refunds  Refund[]

  @@map("payments")
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  CRYPTO
  ACH
  HSA_CARD // Health Savings Account
  FSA_CARD // Flexible Spending Account
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

// Cryptocurrency Payments
model CryptoPayment {
  id              String              @id @default(uuid())
  amount          Decimal             @db.Decimal(10, 2)
  cryptocurrency  Cryptocurrency
  walletAddress   String              @map("wallet_address")
  paymentAddress  String?             @map("payment_address")
  status          CryptoPaymentStatus @default(PENDING)
  transactionHash String?             @map("transaction_hash")
  confirmations   Int                 @default(0)
  patientId       String              @map("patient_id")
  facilityId      String              @map("facility_id")
  createdBy       String              @map("created_by")
  createdAt       DateTime            @default(now()) @map("created_at")
  updatedAt       DateTime            @updatedAt @map("updated_at")

  // Relations
  patient  Patient  @relation(fields: [patientId], references: [id])
  facility Facility @relation(fields: [facilityId], references: [id])
  user     User     @relation(fields: [createdBy], references: [id])

  @@map("crypto_payments")
}

enum Cryptocurrency {
  SOL
  ETH
  MATIC
  USDC
  USDT
}

enum CryptoPaymentStatus {
  PENDING
  CONFIRMING
  COMPLETED
  FAILED
  REFUNDED
}

// Refund Management
model Refund {
  id          String       @id @default(uuid())
  paymentId   String       @map("payment_id")
  amount      Decimal      @db.Decimal(10, 2)
  reason      String
  status      RefundStatus @default(PENDING)
  processedBy String       @map("processed_by")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  // Relations
  payment Payment @relation(fields: [paymentId], references: [id])
  user    User    @relation(fields: [processedBy], references: [id])

  @@map("refunds")
}

enum RefundStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// Medical Records
model MedicalRecord {
  id          String   @id @default(uuid())
  patientId   String   @map("patient_id")
  providerId  String   @map("provider_id")
  recordType  String   @map("record_type")
  diagnosis   String?
  treatment   String?
  notes       String?
  dateOfVisit DateTime @map("date_of_visit") @db.Date
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  patient  Patient  @relation(fields: [patientId], references: [id])
  provider Provider @relation(fields: [providerId], references: [id])

  @@map("medical_records")
}

// Audit Logging
model AuditLog {
  id         String   @id @default(uuid())
  userId     String?  @map("user_id")
  action     String
  resource   String
  resourceId String?  @map("resource_id")
  ipAddress  String?  @map("ip_address")
  userAgent  String?  @map("user_agent")
  details    Json?
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  user User? @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

// System Configuration
model SystemConfig {
  id        String   @id @default(uuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("system_config")
}

// API Keys for external services
model ApiKey {
  id          String    @id @default(uuid())
  serviceName String    @map("service_name")
  keyHash     String    @map("key_hash")
  isActive    Boolean   @default(true) @map("is_active")
  lastUsed    DateTime? @map("last_used")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("api_keys")
}

// Wallet Management
model Wallet {
  id         String    @id @default(cuid())
  userId     String    @map("user_id")
  address    String    @unique
  blockchain String
  walletType String?   @map("wallet_type")
  isPrimary  Boolean   @default(false) @map("is_primary")
  isActive   Boolean   @default(true) @map("is_active")
  balanceUSD Float?    @map("balance_usd")
  lastSyncAt DateTime? @map("last_sync_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([userId, isActive])
  @@index([address])
  @@map("wallets")
}

// Session Management - NOTE: This table should have RLS policies enabled in production
// Only accessible via service accounts, not public API
// ============================================
// SESSION MANAGEMENT - SECURITY CRITICAL
// ============================================
// ⚠️  SECURITY WARNING: This table contains sensitive authentication tokens
// ⚠️  RLS (Row Level Security) MUST be enabled in production
// ⚠️  Never expose refreshToken or token fields via public API
// ⚠️  Use sessions_safe view for client-side queries
// 
// Security measures implemented:
// 1. RLS policies restrict access to session owners only
// 2. Safe view (sessions_safe) excludes sensitive token fields
// 3. Audit logging tracks all session access
// 4. Automatic cleanup of expired sessions
// 5. Helper functions for safe session management
//
// To apply RLS: Run backend/scripts/add-session-rls.sql
// ============================================

model Session {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // SENSITIVE: Session token - protected by RLS
  token         String   @unique
  
  // SENSITIVE: Refresh token for minting new access tokens
  // ⚠️  CRITICAL: Exposure allows account takeover
  // ⚠️  Never return this field in API responses
  // ⚠️  Store encrypted in production
  refreshToken  String?  @unique
  
  // Session metadata
  ipAddress     String?
  userAgent     String?
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("Session")
}

// Verification Tokens
model VerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  type      String
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([email, type])
  @@index([token])
  @@map("verification_tokens")
}

// Transaction Management
model Transaction {
  id            String   @id @default(cuid())
  userId        String   @map("user_id")
  walletId      String?  @map("wallet_id")
  amount        Decimal  @db.Decimal(18, 8)
  currency      String
  type          String
  status        String
  description   String?
  paymentMethod String   @map("payment_method")
  invoiceId     String?  @map("invoice_id")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallet  Wallet?  @relation(fields: [walletId], references: [id])
  invoice Invoice? @relation(fields: [invoiceId], references: [id])

  @@index([userId])
  @@index([walletId])
  @@index([status])
  @@map("transactions")
}

// Invoice Management
model Invoice {
  id            String   @id @default(cuid())
  invoiceNumber String   @unique @map("invoice_number")
  amount        Decimal  @db.Decimal(10, 2)
  status        String
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  transactions Transaction[]

  @@map("invoices")
}

// Chamber Management
model Chamber {
  id         String   @id @default(uuid())
  name       String
  floor      Int
  type       String
  status     String   @default("available")
  capacity   Int      @default(1)
  equipment  Json
  facilityId String   @map("facility_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  facility           Facility             @relation(fields: [facilityId], references: [id])
  bookings           Booking[]
  schedules          ChamberSchedule[]
  maintenanceRecords ChamberMaintenance[]

  @@index([facilityId])
  @@index([status])
  @@map("chambers")
}

// Booking Management
model Booking {
  id            String    @id @default(uuid())
  patientId     String    @map("patient_id")
  doctorId      String    @map("doctor_id")
  chamberId     String    @map("chamber_id")
  facilityId    String    @map("facility_id")
  bookingDate   DateTime  @map("booking_date") @db.Date
  startTime     DateTime  @map("start_time")
  endTime       DateTime  @map("end_time")
  duration      Int
  serviceType   String    @map("service_type")
  status        String    @default("pending")
  notes         String?
  invoiceId     String?   @map("invoice_id")
  paymentStatus String    @default("pending") @map("payment_status")
  createdBy     String    @map("created_by")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  cancelledAt   DateTime? @map("cancelled_at")

  // Relations
  patient  Patient  @relation(fields: [patientId], references: [id])
  doctor   Provider @relation(fields: [doctorId], references: [id])
  chamber  Chamber  @relation(fields: [chamberId], references: [id])
  facility Facility @relation(fields: [facilityId], references: [id])
  creator  User     @relation(fields: [createdBy], references: [id])

  @@index([patientId])
  @@index([doctorId])
  @@index([chamberId])
  @@index([facilityId])
  @@index([bookingDate])
  @@index([status])
  @@map("bookings")
}

// Chamber Schedule
model ChamberSchedule {
  id        String   @id @default(uuid())
  chamberId String   @map("chamber_id")
  bookingId String?  @map("booking_id")
  status    String
  startTime DateTime @map("start_time")
  endTime   DateTime @map("end_time")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  chamber Chamber @relation(fields: [chamberId], references: [id])

  @@index([chamberId])
  @@index([startTime, endTime])
  @@map("chamber_schedules")
}

// Chamber Maintenance
model ChamberMaintenance {
  id          String    @id @default(uuid())
  chamberId   String    @map("chamber_id")
  type        String
  status      String
  scheduledAt DateTime  @map("scheduled_at")
  completedAt DateTime? @map("completed_at")
  notes       String?
  assignedTo  String?   @map("assigned_to")
  createdAt   DateTime  @default(now()) @map("created_at")

  // Relations
  chamber Chamber @relation(fields: [chamberId], references: [id])

  @@index([chamberId])
  @@index([status])
  @@map("chamber_maintenance")
}
