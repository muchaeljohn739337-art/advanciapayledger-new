# Web3 / Crypto Configuration

# RPC Provider API Keys (optional - will use public RPCs if not provided)
INFURA_API_KEY=your_infura_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Payment Wallet Address (where you receive payments)
PAYMENT_WALLET_ADDRESS=0xYourWalletAddressHere

# Supported Networks
ETHEREUM_NETWORK=mainnet  # or testnet for testing
POLYGON_NETWORK=mainnet   # optional
BASE_NETWORK=mainnet      # optional

# Transaction Monitoring
TX_CONFIRMATION_BLOCKS=12  # Number of confirmations required
TX_TIMEOUT_MINUTES=30      # Transaction timeout
