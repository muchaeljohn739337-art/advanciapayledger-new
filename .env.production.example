# Production Environment Variables Template
# Copy this file to .env.production and fill in the values
# DO NOT commit .env.production to version control

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3001

# ============================================
# Azure Configuration
# ============================================
AZURE_TENANT_ID=your-tenant-id
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=rg-prod-advancia
AZURE_KEY_VAULT_URL=https://kv-prod-advancia.vault.azure.net/

# ============================================
# Database Configuration (from Key Vault)
# ============================================
# These will be retrieved from Azure Key Vault at runtime
# DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# ============================================
# Redis Configuration (from Key Vault)
# ============================================
# These will be retrieved from Azure Key Vault at runtime
# REDIS_URL=rediss://:password@host:6380

# ============================================
# Authentication (from Key Vault)
# ============================================
# JWT_SECRET will be retrieved from Azure Key Vault
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================
# Blockchain Configuration
# ============================================
# Ethereum
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
ETHEREUM_CHAIN_ID=1

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key
POLYGON_CHAIN_ID=137

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# Cloudflare Ethereum Gateway
CLOUDFLARE_ETHEREUM_GATEWAY=https://cloudflare-eth.com/v1/mainnet

# ============================================
# AI Configuration
# ============================================
GOOGLE_GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# ============================================
# Email Configuration
# ============================================
# Postmark
POSTMARK_SERVER_TOKEN=your-postmark-token
POSTMARK_FROM_EMAIL=noreply@advanciapayledger.com

# Resend (fallback)
RESEND_API_KEY=your-resend-api-key

# SMTP (fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# Payment Processing
# ============================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# Monitoring & Logging
# ============================================
# Sentry
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# ============================================
# Security
# ============================================
# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# ============================================
# Feature Flags
# ============================================
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# ============================================
# File Upload
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
NEXT_PUBLIC_SENTRY_DSN=your-frontend-sentry-dsn
NEXT_PUBLIC_ENVIRONMENT=production

# ============================================
# AWS Configuration (for backups)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=advancia-backups

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_RETENTION_DAYS=30

# ============================================
# Notification Configuration
# ============================================
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url
ALERT_EMAIL=security@yourdomain.com

# ============================================
# Domain Configuration
# ============================================
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
FRONTEND_DOMAIN=app.yourdomain.com

# ============================================
# SSL/TLS Configuration
# ============================================
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/certs/key.pem
SSL_CA_PATH=/etc/ssl/certs/ca.pem
